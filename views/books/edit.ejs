<h1>Edit Book</h1>
<div>
    <img width="100" height="100" src="<%= book.coverImagePath %>">
</div>
<form action="/books/<%= book._id%>?_method=PUT" method="post">
    <div>
        <label for="">Title</label>
        <input type="text" id="title" name="title" value="<%=book.title %>">
    </div>
    <div>
        <label for="author">Author</label>
        <select name="author" id="author">
            <% authors.forEach(author => { %>
                <option <%= author.name === book.author.name ? 'selected' : '' %> value="<%= author._id %>"><%= author.name %></option>
            <% }) %>
        </select>
    </div>
    <div>
        <label for="">PublishDate</label>
        <input type="date" id="publishDate" value="<%= book.publishDate ? book.publishDate.toISOString().substr(0, 10) : '' %>" name="publishDate">
    </div>

    <div>
        <label for="">Page Count</label>
        <input type="number" value="<%=book.pageCount %>" id="pageCount" min="1" name="pageCount">
    </div>
    <div>
        <label for="">Cover</label>
        <input type="file" id="cover" name="cover" class="filepond" accept="image/*">
    </div>
    <div>
        <label for="">Description</label>
        <textarea name="description" id="description"><%=book.description %></textarea>
    </div>


    <a href="/books">Cancel</a>
    <button type="submit">Update</button>
</form>