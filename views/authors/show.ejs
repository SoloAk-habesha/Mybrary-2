<div class="page-header">
    <%= author.name %>
</div>

<%- include('../partials/editForm.ejs',{url:`/authors/${author._id}/edit`}) %>
    <%- include('../partials/deleteForm.ejs',{url:`/authors/${author._id}`}) %>

        <% if (books.length>0) { %>
            <h2>Books by Author</h2>
            <% books.forEach(book => { %>
                <div class="my-3 container-fluid">
                    <div>
                        <%=book.title%>
                    </div>
                    <div>
                        <a href="/books/<%= book._id%>"><img width="100" height="100" src="<%= book.coverImagePath %>"></a>
                    </div>
                </div>
                <% }) %>
                    <% } %>