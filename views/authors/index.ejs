<h2>Search Authors</h2>

<form action="/authors" method="get">
    <label for="">Name</label>
    <input type="text" id="name" name="name" value="<%=searchOption.name%>">
    <button type="submit">Search</button>
</form>
<br>

<% authors.forEach(author => { %>
    <div>
        <%=author.name%>
    </div>

    <a href="/authors/<%= author._id%>">View</a>
    <%- include('../partials/editForm.ejs',{url:`/authors/${author._id}/edit`}) %>
        <%- include('../partials/deleteForm.ejs',{url:`/authors/${author._id}`}) %>
            <% }) %>